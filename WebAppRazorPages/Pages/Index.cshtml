@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="row">
    <div class="col-md-6">
        <h1>
            PRODUCTS
        </h1>
    </div>
    <div class="col-md-6 text-right">
        <button class="btn btn-success" id="createProductsButton"> Create New Product </button>
    </div>
</div>


<table class="table" id="productsTable">
    <thead>
        <tr>

            <th>Product Name</th>
            <th>Supplier</th>
            <th>Category</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Units On Order</th>
            <th>Reorder Level</th>
            <th>Discontinued</th>



        </tr>
    </thead>

    <tbody>
    </tbody>
</table>


<div class="modal fade" id="createProductModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="createAuthorForm">
                    <div class="form-group">
                        <label asp-for="product.ProductName">Product Name</label>
                        <input type="text" class="form-control" asp-for="product.ProductName" />
                        <span class="invalid-feedback d-block" asp-validation-for="product.ProductName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.SupplierID">Supplier ID</label>
                        <input asp-for="product.SupplierID" type="text" class="form-control" />
                        <span asp-validation-for="product.SupplierID" class="invalid-feedback d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.CategoryID">Category ID</label>
                        <input asp-for="product.CategoryID" type="text" class="form-control" />
                        <span asp-validation-for="product.CategoryID" class="invalid-feedback d-block"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="product.QuantityPerUnit">Quantity Per Unit</label>
                        <input asp-for="product.QuantityPerUnit" type="text" class="form-control" />
                        <span asp-validation-for="product.QuantityPerUnit" class="invalid-feedback d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.UnitPrice">Unit Price</label>
                        <input asp-for="product.UnitPrice" type="text" class="form-control" />
                        <span asp-validation-for="product.UnitPrice" class="invalid-feedback d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.UnitsInStock">Units In Stock</label>
                        <input asp-for="product.UnitsInStock" type="text" class="form-control" />
                        <span asp-validation-for="product.UnitsInStock" class="invalid-feedback d-block"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="product.UnitsOnOrder">Units On Order</label>
                        <input asp-for="product.UnitsOnOrder" type="text" class="form-control" />
                        <span asp-validation-for="product.UnitsOnOrder" class="invalid-feedback d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.ReorderLevel">Reorder Level</label>
                        <input asp-for="product.ReorderLevel" type="text" class="form-control" />
                        <span asp-validation-for="product.ReorderLevel" class="invalid-feedback d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.Discontinued">Discontinued</label>
                        <input asp-for="product.Discontinued" type="text" class="form-control" />
                        <span asp-validation-for="product.Discontinued" class="invalid-feedback d-block"></span>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Cancel </button>

                <button type="submit" form="createAuthorForm" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/js/index.js"></script>
}
